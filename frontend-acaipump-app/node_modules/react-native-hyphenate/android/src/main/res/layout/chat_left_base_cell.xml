<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:hs="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/chat_time_layout"/>

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.yunio.hypenateplugin.view.roundimage.RoundedImageView
            android:id="@+id/chat_left_image_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:background="@drawable/avator_bg"
            android:scaleType="centerCrop"
            hs:riv_oval="true"/>


        <FrameLayout
            android:id="@+id/ll_content_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/chat_left_cell_margin_right"
            android:layout_weight="1">
        </FrameLayout>
    </LinearLayout>

</LinearLayout>